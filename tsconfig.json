{
  "compilerOptions": {
    "target": "ES2017",
    "module": "NodeNext",
    "jsx": "react",
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["src"]
}
